<?xml version="1.0" encoding="utf-8"?>
<pl.biokod.praca.tooltipview.TooltipLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <pl.biokod.praca.tooltipview.TooltipView
        android:id="@+id/toolTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:anchorHeight="40dp"
        app:anchorWidth="20dp"
        app:backgroundColor="@color/blueLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:strokeWidth="1dp"
        app:textPaddingSide="10dp"
        app:textSize="14sp" />

    <ImageView
        android:id="@+id/closeIMV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</pl.biokod.praca.tooltipview.TooltipLayout>